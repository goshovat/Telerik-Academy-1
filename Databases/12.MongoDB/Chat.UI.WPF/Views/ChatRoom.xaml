<UserControl x:Class="Chat.UI.WPF.Views.ChatRoom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    <Canvas>
        <ListBox x:Name="lbMessages" Height="316" Canvas.Top="104" Width="380" Canvas.Left="10" BorderBrush="#FFFFDD04" ScrollViewer.VerticalScrollBarVisibility="Auto" UseLayoutRounding="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
        <TextBox x:Name="txtMessage" Height="54" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="430" Width="309" ToolTip="Enter message to the chat" VerticalScrollBarVisibility="Auto" TabIndex="1"/>
        <Button x:Name="btnAdd" Content="Send" Canvas.Left="327" Canvas.Top="430" Width="63" Height="54" FontSize="20" Click="btnAdd_Click" TabIndex="2"/>

    </Canvas>
</UserControl>
